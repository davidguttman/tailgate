.directories

  if directoriesActive
    .directory-list
      .controls
        input.search.input-medium(placeholder='search')

        button.btn.sort(data-sort='name')
          i.icon-font.sort(data-sort='name')
        button.btn.sort(data-sort='created')
          i.icon-calendar.sort(data-sort='created')

      ul.list
        for directory in directories
          li.dir
            a.name(href=directory.get('url'))
              = directory.get('name').replace(/_/g, ' ')
            span.created
              = directory.created()