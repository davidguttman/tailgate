if directoriesActive
  .directories

    if (directories.length > 0)
      .directory-list
        .controls
          input.search.input-medium(placeholder='search')

          button.btn.sort(data-sort='name')
            i.icon-font
          button.btn.sort(data-sort='time')
            i.icon-calendar

        ul.list
          for directory in directories
            li.dir
              a.name(href=directory.get('url'))
                = directory.get('name').replace(/_/g, ' ')
              span.created
                = directory.created()
              span.time.hide
                = directory.get('ctime')
    else
      .nothing
        | No directories.