if filesActive
  .files    

    if (files.length > 0)
      .files-list

        .controls
          input.search(placeholder='search')

          button.btn.sort(data-sort='name')
            i.icon-font
          button.btn.sort(data-sort='time')
            i.icon-calendar

          .add-all
            a.btn
              i.icon-plus

        ul.list
        
          for file in files
          
            if file.get('vote') > 0
              - voteClass = 'upvoted'
            else if file.get('vote') < 0
              - voteClass = 'downvoted'
            else
              - voteClass = ''

            li.file(class=file.get('ext') + ' ' + voteClass )
              
              a.name(href=file.get('url'), data-cid=file.cid)
                = file.get('name').replace(/_/g, ' ')

              span.created
                = file.created()

              span.time.hide
                = file.get('ctime')
    else
      .nothing
        | No files.