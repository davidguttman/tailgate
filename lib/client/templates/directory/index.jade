
.row
  .location.span10
    p.small
      = path

    .page-header
      h4
        = dirName

    .buttons
      .add-all.pull-right
        a.btn.btn-small
          | Add All

      if upLink
        .up.pull-right
          a.btn.btn-small(href=upLink)
            | Up One Directory

      
.row

  .directories.span4
    table.table
      thead
        tr
          th.sort(data-sort='name')
            | Name
          th.sort(data-sort='ctime')
            | Created
      tbody
        for directory in directories
          tr.dir
            td
              a.name(href=directory.get('url'))
                = directory.get('name').replace(/_/g, ' ')
            td
              = directory.created()


  .files.span4
    table.table
      thead
        tr
          th.sort(data-sort='ctime')
            | Name
          th.sort(data-sort='ctime')
            | Created
      tbody
        for file in files
          tr.file(class=file.get('ext'))
            td
              a.name(href=file.get('url'), data-name=file.get('name'), data-url=file.get('url'))
                = file.get('name').replace(/_/g, ' ')
            td
              = file.created()