
.row
  .location.span10
    .page-header
      h2
        = dirName

    p.lead
      = path

    if upLink
      .up.pull-right
        a.btn(href=upLink)
          | Up One Directory

    .add-all.pull-right
      a.btn
        | Add All
.row

  .directories.span5
    table.table
      thead
        tr
          th
            | Name
          th
            | Created
      tbody
        for directory in directories
          tr.dir
            td
              a.name(href=directory.get('url'))
                = directory.get('name')
            td
              = directory.created()


  .files.span5
    table.table
      thead
        tr
          th
            | Name
          th
            | Created
      tbody
        for file in files
          tr.file(class=file.get('ext'))
            td
              a.name(href=file.get('url'), data-name=file.get('name'), data-url=file.get('url'))
                = file.get('name')
            td
              = file.created()